<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:layout_margin="1dp">

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:hint="enter url"
        android:layout_weight="0.85"
        android:background="@drawable/drawble"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_search_black_24dp"
        android:onClick="load"
        android:layout_weight="0.15"
        android:id="@+id/iv1"/>
    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/wv1"
        android:layout_weight="0.4"
        android:layout_margin="2dp"
        android:layout_marginBottom="1dp">
    </WebView>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/wv2"
            android:layout_weight="0.4"></WebView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:layout_margin="3dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:src="@drawable/ic_002_chrome"
                android:onClick="load"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:id="@+id/iv3"
                android:src="@drawable/ic_004_facebook_logo"
                android:onClick="load"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:id="@+id/iv4"
                android:src="@drawable/ic_003_youtube"
                android:onClick="load"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:id="@+id/iv5"
                android:src="@drawable/ic_001_html"
                android:onClick="load"/>
        </LinearLayout>




</LinearLayout>